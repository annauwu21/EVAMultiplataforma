<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.InicioSession">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="Center"
                       WidthRequest="250">
            <!-- Place new controls here -->
            <Label Text="Iniciar Session"
               FontAttributes="Bold"
               FontSize="30"
               HorizontalTextAlignment="Center"
               TextColor="#565168"/>
            <Entry Placeholder="Usuario" x:Name="User"
               Keyboard="Text"/>
            <Entry Placeholder="Contraseña" x:Name="Pass"
               Keyboard="Text" IsPassword="True"/>
            <Button Text="Iniciar Session" Clicked="btnIniciar_Clicked" 
                BackgroundColor="DarkMagenta" x:Name="btnInicarSessio" IsEnabled="True"/>
            <Button Text="Registrar-se" Clicked="btnRegistrar_Clicked"
                BackgroundColor="DarkMagenta" x:Name="btnRegistrar"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>