<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Registrar">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="Center"
                       WidthRequest="250">
            <!-- Controles -->
            <Label Text="Registrar"
               FontAttributes="Bold"
               FontSize="30"
               HorizontalTextAlignment="Center"
               TextColor="#a5a0d6"/>
            <Entry Placeholder="Usuario" x:Name="User"
               Keyboard="Text"/>
            <Entry Placeholder="Contraseña" x:Name="Pass"
               Keyboard="Text" IsPassword="True"/>
            <Entry Placeholder="Contraseña" x:Name="Pass2"
               Keyboard="Text" IsPassword="True"/>
            <Button Text="Registrar-se" Clicked="btnRegistrar_Clicked"
                BackgroundColor="#a5a0d6" x:Name="btnRegistrar"/>
            <Button Text="Cerrar" Clicked="btnCerrar_Clicked"
                BackgroundColor="#f9b2b7" x:Name="btnCerrar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>