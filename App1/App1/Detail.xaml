<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:App1"
             x:Class="App1.Detail"
             x:Name="cp"
             BackgroundColor="#ffffff">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="https://cdn0.iconfinder.com/data/icons/navigation-set-arrows-part-one/32/MoreHorizontal-256.png" Priority="0" Order="Primary" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <RelativeLayout>

            <Image x:Name="bg"
              RelativeLayout.WidthConstraint=
                "{ConstraintExpression Type=RelativeToParent, Property=Width}"
              RelativeLayout.HeightConstraint=
                "{ConstraintExpression Type=RelativeToParent, Property=Height}"/>
            <Grid RelativeLayout.WidthConstraint=
            "{ConstraintExpression Type=RelativeToParent, Property=Width}"
          RelativeLayout.HeightConstraint=
            "{ConstraintExpression Type=RelativeToParent, Property=Height}">

                <StackLayout>
                    <CollectionView Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.RowSpan="1"
                            ItemsSource="{Binding Chats}"
                            BackgroundColor="Transparent"
                            x:Name ="cv"
                            ItemsUpdatingScrollMode="KeepLastItemInView"
                            Scrolled="cv_Scrolled">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame  BackgroundColor="#00ffffff">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Frame Grid.Row="0"
                                       Grid.Column="0"
                                       CornerRadius="30"
                                       IsVisible="{Binding ResponseVisibility}"
                                       IsClippedToBounds="True"
                                       BackgroundColor="{Binding bubbleEva}">
                                            <Label  
                                        Text="{Binding Response}"
                                        TextColor= "black"
                                        HorizontalOptions="Start"
                                        LineBreakMode="WordWrap"
                                        VerticalTextAlignment="Center">
                                            </Label>
                                        </Frame>

                                        <Frame Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.RowSpan="1"
                                       Grid.ColumnSpan="1"
                                       CornerRadius="30"
                                       IsClippedToBounds="True"
                                       BackgroundColor="{Binding bubbleEva}"
                                       IsVisible="{Binding ImageVisibility}"
                                       Padding="0"
                                       Margin="0">
                                            <Image  
                                        Source="{Binding Image}"
                                        HeightRequest="200"
                                        WidthRequest="200"
                                        VerticalOptions="CenterAndExpand"
                                        HorizontalOptions="CenterAndExpand"
                                        Margin="0"
                                        >
                                            </Image>
                                        </Frame>

                                        <Frame Grid.Row="0"
                                       Grid.Column="2"
                                       CornerRadius="30"
                                       IsClippedToBounds="True"
                                       BackgroundColor="{Binding bubbleUser}"
                                       HorizontalOptions="End"
                                       IsVisible="{Binding QuestionVisibility}"
                                       >
                                            <Label  
                                        Text="{Binding Question}"
                                        TextColor="Black"
                                        HorizontalOptions="End"
                                        LineBreakMode="WordWrap"
                                        VerticalTextAlignment="Center">
                                            </Label>
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ImageButton    Grid.Row="0"
                                        Grid.Column="0"
                                        Source="https://cdn1.iconfinder.com/data/icons/arrows-vol-1-5/24/dropdown_arrow2-256.png"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        HeightRequest="25"
                                        WidthRequest="25"
                                        BackgroundColor="Transparent"
                                        Clicked="ImageButton_Clicked"
                                        Margin="10"/>
                        
                        <Entry  Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Placeholder="Mensaje"
                        VerticalOptions="Center"
                        x:Name="Question"/>

                        <Button Grid.Row="1"
                        Grid.Column="3"
                        Text="Enviar"
                        VerticalOptions="Center" 
                        BackgroundColor="White"
                        TextColor="Black"
                        BorderColor="Black"
                        Clicked="Button_Clicked"/>
                    </Grid>
                </StackLayout>
                
            </Grid>
            
            
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>