<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Detail"
             BackgroundImageSource="https://i.pinimg.com/originals/d8/6f/92/d86f92c6e76d5a4a84dcb779fb6b6447.jpg">

    <ContentPage.Content>

        <CollectionView Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.RowSpan="1"
                            ItemsSource="{Binding Chats}"
                            BackgroundColor="#00ffffff"
                            x:Name ="cv">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0"
                                       Grid.Column="0"
                                       Text="{Binding Response}"
                                       TextColor= "Blue"
                                       HorizontalOptions="Start"/>

                            <Image  Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.RowSpan="1"
                                    Grid.ColumnSpan="1"
                                    Source=""
                                    HeightRequest="100"
                                    HorizontalOptions="Start">
                            </Image>
                                
                            <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Question}"
                                       TextColor="OrangeRed"
                                       HorizontalOptions="End"/>
                        </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Footer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Entry Grid.Row="0"
                               Grid.Column="0"
                               Placeholder="Mensaje"
                               VerticalOptions="Center"
                               x:Name="question"/>

                        <Button Grid.Row="0"
                            Grid.Column="1"
                            Text="Enviar"
                            VerticalOptions="Center" 
                            Clicked="Button_Clicked"/>
                    </Grid>
                </CollectionView.Footer>
            </CollectionView>

    </ContentPage.Content>
</ContentPage>